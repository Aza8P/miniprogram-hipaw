/* pages/landing/landing.wxss */
.pageContainer {
  background-color: transparent;
  overflow-y: scroll;
}

page {
  margin: 0;
  padding: 0;
  background-size: cover;
}

.loading-screen {
  width: 100%;
  height: 60vh;
  background-color: transparent;
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading {
  width: 80px;
  display: flex;
  flex-wrap: wrap;
  animation: rotate 4s linear infinite;
}

@keyframes rotate{
  to{
    transform: rotate(360deg);
  }
}

.loading .sq1{
  width: 32px;
  height: 32px;
  background-color: #00B5A3;
  margin: 4px;
}

.loading .sq2{
  width: 32px;
  height: 32px;
  background-color: #e4e4e4; 
  margin: 4px;
}

