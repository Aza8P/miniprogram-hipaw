.pet-card {
  height: 190rpx;
  width: 190rpx;
  overflow: hidden;
  position: relative;
  border-radius: 14rpx;
  /* border: 1px solid rgba(0, 181, 163, 1); */
  box-sizing: border-box;
  color: white;
  display: inline-block;
  margin: 20rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.5);
}

