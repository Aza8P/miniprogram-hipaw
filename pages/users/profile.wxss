.main {
  /* display: flex; */
  flex-direction: column;
}

.user-box {
  margin: 0 auto;
  display: flex;
  margin-bottom: 30rpx;
}

.profilepic {
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  /* border: 1px solid #00B5A3; */
  margin-left: 30rpx;
}

.user-name {
  margin-left: 30rpx;
  margin-top: 30rpx;
  position: absolute;
  left: 180rpx;
}

.details {
  position: relative;
  top: 79rpx;
  left: 30rpx;
  font-size: 28rpx;
  text-decoration: underline;
}

