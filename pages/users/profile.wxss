.pet-image {
  position: absolute;
  height: 200rpx;
  width: 200rpx;
  overflow: hidden;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.pet-name, .pet-posted-at {
  position: absolute;
  font-family: Montserrat;
  z-index: 999;
  color: white;
}

.pet-name {
  top: 10rpx;
