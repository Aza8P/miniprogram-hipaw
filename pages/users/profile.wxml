  <view>
      <swiper> 
        <block wx:for="{{pets}}" wx:key="*this">
          <swiper-item style="display: flex; justify-content: center;">
            <view style="background-color: olivedrab;" class="swiper-item {{item}}">card</view>
          </swiper-item>
        </block>
      </swiper>
    </view>


  <scroll-view scroll-x="true" wx:for="{{pets}}" wx:for-item="pet" bindtap="goToPet" data-id="{{pet.id}}" class="my-pet-cards-box">
    <view class="filter"></view>
    <image class="pet-image" style="width: 100%;" src="{{pet.image_url}}" mode="widthFix"></image>
    <view class="pet-info">
      <view class="pet-name">{{pet.name}}</view>
      <view class="pet-sex"><image class="pet-sex-icon" src="{{ pet.sex == 'male' ? '/images/boy.png' : '/images/girl.png'}}"></image></view>
    </view>
    <view class="pet-location">📍 {{pet.district}}</view>
  </scroll-view>
