<!--pages/pets/show.wxml-->
<view class="main">
  <view class="picture">
    <view class="favorite-icon">
      <image class="icon" src="/images/aixin-2.png"></image>
    </view>
    <view class="pet-name">{{pet.name}}</view>
    <view class="filter"></view>
    <image class="pet-avt" mode="aspectFill" src="{{pet.image_url}}"></image>
  </view>
  <view class="pet-info">
    <view> 📍 {{pet.district}}</view>
    <view>Age: {{pet.age}}</view>
    <view>{{pet.description}}</view>
    <view>Fur type: {{pet.fur_type}}</view>
  </view>

  <view class="container">
    <button class="og-button" bindtap="showBookingWindow">Meet & Greet</button>
  </view>

  <view class="sticky-bottom">
    <button bindtap="edit" class="edit-btn" type="default" plain="true">edit</button>
   
    <button bindtap="delete" class="delete-btn" type="warn" plain="true">delete</button>
  </view>

</view>

<!-- Booking model -->
<!-- <booking 
  wx:if="{{showBookingModal}}" 
  bind:goback="removeBookingWindow" 
  text="Choose a time to meet with {{pet.name}}"/> -->
<view class="background" 
  bindtap="{{removeBookingWindow}}" 
  wx:if="{{showBookingModal}}">
</view>
<view class="pop-up-window" 
  wx:if="{{showBookingModal}}">
  <view class="header" >{{text}}</view>
  <!-- pick date -->
  <picker 
    mode="date" 
    value="{{date}}" 
    start="{{date}}" 
    end="2030-12-31" 
    bindchange="bindDateChange">
    <view class="picker" style="background-color: lightblue;">
      Date: {{date}}
    </view>
  </picker>
  <!-- pick timne -->
  <picker mode="time" value="{{time}}" 
    start="09:01" end="21:01" 
    bindchange="bindTimeChange" >
    <view class="picker" style="background-color: lightblue;">
      Time: {{time}}
    </view>
  </picker>
  <button bindtap="submitBooking">Submit</button>
</view>

