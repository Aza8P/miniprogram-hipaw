<!--pages/pets/components/booking.wxml-->
<view class="background" bindtap="backToShow"> </view>
<view class="pop-up-window">
  <view class="header" >{{text}}</view>
  <!-- pick date -->
  <picker 
    mode="date" 
    value="{{date}}" 
    start="{{date}}" 
    end="2030-12-31" 
    bindchange="bindDateChange">
    <view class="picker" style="background-color: lightblue;">
      Date: {{date}}
    </view>
  </picker>
  <!-- pick timne -->
  <picker mode="time" value="{{time}}" 
    start="09:01" end="21:01" 
    bindchange="bindTimeChange" >
    <view class="picker" style="background-color: lightblue;">
      Time: {{time}}
    </view>
  </picker>
  <button bindtap="passData">Submit</button>
</view>

