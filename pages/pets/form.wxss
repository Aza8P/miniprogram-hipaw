
.main {
  background: #00B2CA;
  display: flex;
  justify-content: center;
  padding: 30rpx;
  height: 100vh;
}

.form-box {
  background: white;
  color: #1D4E89;
  border-radius: 16rpx;
  font-size: 12pt;
  width: 500rpx;
  padding: 40rpx 60rpx;
  height: fit-content;
}
.form-item {
  margin-bottom: 20rpx;
}
label {
  padding: 10rpx;
}
input {
  border: 1px solid rgb(53, 51, 51);
  border-radius: 10rpx;
  padding: 10rpx;
} 

.btn-area {
  display: flex;
}
