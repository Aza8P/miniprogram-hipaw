/* pages/pets/show.wxss */
page {
  height: 100vh;
  background-color: white;
}

.pageContainer {
  overflow-y: scroll;
}

.favorite-icon {
  position: absolute;
  top: 30rpx;
  right: 40rpx;
  z-index: 2;
}

.pet-name {
  position: absolute;
  bottom: 60rpx;
  font-size: 50rpx;
  font-weight: bold;
  left: 30rpx;
  color: white;
  z-index: 2;
}

.pet-avt {
  height: 700rpx;
  object-fit: cover;
  margin-bottom: 30rpx;
  width: 100%;
}

.picture {
  position: relative;

}

.icon {
  height: 70rpx;
  width: 70rpx;
}

.sticky-bottom {
  position: sticky;
  bottom: 0rpx;
  padding: 30rpx;
  background-color: transparent;
  height: 250rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
 .pet-info {
  margin-left: 40rpx;
  margin-bottom: 70rpx;
 }

 .h1 {
   font-size: 16pt;
  }

  .edit-card {
    display: flex;
    justify-content: space-between;
  }
  .meet-btn {
    background-color: #00B5A3;
    color: white;
    margin-bottom: 50rpx;
  }
  .edit-btn {
    color: white;
    background-color: #404040;
    margin-bottom: 15rpx;
  }
  .delete-btn {
    color: #404040;
    background-color: transparent;
    border: 1px solid #404040;
    margin-bottom: 15rpx;
  }

  .filter {
    position: absolute;
    background-color: black;
    opacity: 25%;
    height: 350px;
    margin-bottom: 30rpx;
    width: 100%;
    border-radius: 5px;
    z-index: 1;
  }